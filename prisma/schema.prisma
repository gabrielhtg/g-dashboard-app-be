generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model LogActivity {
  id         Int   @id @default(autoincrement())
  username   String   @db.VarChar(50)
  log_data   String   @db.VarChar(500)
  created_at DateTime @default(now())

  @@map("log_activity")
}

model users {
  username        String @id @db.VarChar(50)
  email           String @unique(map: "Users_email_key") @db.VarChar(100)
  nama            String
  profile_picture String @default("") @db.VarChar(250)
  password        String @db.VarChar(250)
  last_ip String? @db.VarChar(45)
  login_token     String?
}

model CodeSnippets {
  @@map("code_snippets")

  id              Int   @id @default(autoincrement())
  title           String @db.VarChar(250)
  description     String @db.Text
  code_snippet    String @db.Text
  language        String @db.VarChar(100)
}

model UsefullLinks {
  @@map("usefull_links")

  id              Int   @id @default(autoincrement())
  title           String @db.VarChar(250)
  description     String @db.Text
  link            String @db.VarChar(500)
}

model OcrResult {
  @@map("ocr_result")

  id Int @id @default(autoincrement())
  result String @db.LongText()
  upload_date DateTime @default(now())
  uploaded_by String
  total_file Int
  bank_type String
  link String @db.VarChar(255)
  error_message String?
}
